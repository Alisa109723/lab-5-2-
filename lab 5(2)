#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int n, a[100], i, min, sum = 0;
    int first = -1, second = -1;
    int choice;

    printf("Меню:\n");
    printf("1 - Ввести масив з клавіатури\n");
    printf("2 - Заповнити масив випадковими числами\n");
    printf("Ваш вибір: ");
    scanf("%d", &choice);

    printf("Введіть розмір масиву: ");
    scanf("%d", &n);

    if (choice == 1) {
        for (i = 0; i < n; i++) {
            printf("a[%d] = ", i);
            scanf("%d", &a[i]);
        }
    } else {
        srand(time(0));
        for (i = 0; i < n; i++) {
            a[i] = -100 + rand() % 201;
            printf("a[%d] = %d\n", i, a[i]);
        }
    }

    // Знаходження мінімального
    min = a[0];
    for (i = 1; i < n; i++)
        if (a[i] < min)
            min = a[i];

    // Пошук індексів перших двох від’ємних
    for (i = 0; i < n; i++) {
        if (a[i] < 0) {
            if (first == -1)
                first = i;
            else {
                second = i;
                break;
            }
        }
    }

    if (first != -1 && second != -1 && second > first + 1) {
        for (i = first + 1; i < second; i++)
            sum += a[i];
    }

    printf("Мінімальний елемент: %d\n", min);
    if (second != -1)
        printf("Сума між першим і другим від’ємними: %d\n", sum);
    else
        printf("Недостатньо від’ємних елементів.\n");

    return 0;
}
